<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details">		
		<field
			name="name"
			type="text"
			label="COM_SSCHEDULE_TEACHER_FIELD_NAME_LABEL"
			size="50"
			class="inputbox"
			required="true"
			default=""
		/>           
               <field
			name="first_name"
			type="text"
			label="COM_SSCHEDULE_TEACHER_FIELD_FIRST_NAME_LABEL"
			size="50"
			class="inputbox"
			default=""
		/>
		<field
			name="published"
			type="list"
			label="COM_SSCHEDULE_TEACHER_FIELD_STATE_LABEL"
			class="inputbox"
			size="1"
			default="1">
			<option
				value="1">JPUBLISHED</option>
			<option
				value="0">JUNPUBLISHED</option>
			
		</field>
                 <field
                        label="COM_SSCHEDULE_TEACHER_FIELD_MODIFIED_LABEL"
			name="modified"
			readonly="true" class="readonly"
		/>
                <field
                        label="COM_SSCHEDULE_TEACHER_FIELD_ID_LABEL"
			name="id"
			readonly="true" class="readonly"
		/>
	</fieldset>
        
        <fieldset name="editor">
		<field  name="description"
			type="editor"
			label="COM_SSCHEDULE_TEACHER_FIELD_DESCRIPTION_LABEL"
			filter="safehtml"
			class="inputbox"
                        buttons="true"
                        hide="article,readmore,pagebreak" 
		/>
	</fieldset>
        
        <fieldset name="optional">
		<field name="image"
			type="media"
			label="COM_SSCHEDULE_TEACHER_FIELD_IMAGE_LABEL"
			description="COM_SSCHEDULE_TEACHER_FIELD_IMAGE_DESC"
			required="false"
			directory="/"
		/>
	</fieldset>
</form>

